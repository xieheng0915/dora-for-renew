<div class="container">
  <div class="commen-containe contact-containe">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <div class="contact-section common section-title title">
          <h1 class="text-center">
            <%- __('common.menu.contact') %>
          </h1>
        </div>
      </div>
      <!-- End col-->
    </div>
    <!-- End row -->

    <div class="row" v-if="!cloudSuccess">
      <div class="col-md-10 offset-md-1">
        <div class="form-section">
          <ajax-form action="deliverContactFormMessage" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()"
            :handle-parsing="handleParsingForm">
            <div class="row">
              <div class="form-group col-md-6">
                <div class="input-field">
                  <input class="form-control dark-control" id="full-name" name="full-name" type="text" :class="[formErrors.fullName ? 'is-invalid' : '']"
                    v-model.trim="formData.fullName" placeholder=<%= __( 'name') %> autofocus>
                  <div class="invalid-feedback error" id="err-emailvld" v-if="formErrors.fullName">
                    <%= __('contact.error.name') %>
                  </div>
                </div>
              </div>

              <div class="form-group col-md-6">
                <div class="input-field">

                  <input class="form-control dark-control" id="email-address" name="email-address" type="email" :class="[formErrors.emailAddress ? 'is-invalid' : '']"
                    v-model.trim="formData.emailAddress" placeholder=<%= __( 'email-example') %>>
                  <div class="invalid-feedback error" id="err-emailvld" v-if="formErrors.emailAddress">
                    <%= __('login.error.emailaddress') %>
                  </div>
                </div>
              </div>
            </div>
            <!-- End row -->

            <div class="row">
              <div class="form-group col-md-12">
                <textarea class="form-control dark-control" rows="7" id="message" name="message" :class="[formErrors.message ? 'is-invalid' : '']"
                  v-model.trim="formData.message" placeholder="<%= __('contact.message') %>"></textarea>
                <div class="invalid-feedback error" id="err-message" v-if="formErrors.message">
                  <%- __('contact.error.message') %>
                </div>
              </div>
            </div>
            <!-- End row -->

            <div class="row">
              <div class="col-md-12 text-center">
                <div class="error" id="err-timedout" v-if="cloudError">
                  <small>
                    <%- __('error.systemerror') %>
                  </small>
                </div>
                <ajax-button type="submit" :syncing="syncing" class="subscribe-submit submit-darkbtn">
                  <%= __('submit') %>
                </ajax-button>
              </div>
              <!-- End col -->

            </div>
            <!-- End row-->

          </ajax-form>
        </div>
        <!-- form-section -->
      </div>
      <!-- End col-md-12 -->
    </div>
    <!--End row-->

    <div class="row" v-if="cloudSuccess">
      <div class="col-md-12 text-center">
        <%- __('email-sent') %>
      </div>
    </div>
    <!-- End row-->


  </div>
  <!-- End commen-containe -->
</div>
<!-- End container -->