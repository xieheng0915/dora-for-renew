<div id="edit-profile" v-cloak>
  <div class="container">
    <div class="common-container">
      <div class="row">
        <div class="col-md-10 offset-md-1">

          <div class="services-section common section-title title">
            <h1 class="text-center">
              <%= __('update-personal-info') %>
            </h1>
          </div>

          <ajax-form action="updateProfile" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="full-name">
                    <%= __('name') %>
                  </label>
                  <input class="form-control dark-control" id="full-name" name="full-name" type="text" :class="[formErrors.fullName ? 'is-invalid' : '']"
                    v-model.trim="formData.fullName" placeholder="Sturgis P. Sturgeon">
                  <div class="invalid-feedback" v-if="formErrors.fullName">
                    <%= __('enter-your-full-name') %>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="email-address">
                    <%= __('email') %>
                  </label>
                  <input class="form-control dark-control" id="email-address" name="email-address" type="email" disabled :class="[formErrors.emailAddress ? 'is-invalid' : '']"
                    v-model.trim="formData.emailAddress">
                  <div class="invalid-feedback" v-if="formErrors.emailAddress">
                    <%= __('enter-a-valid-email-address') %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="full-name">
                    <%= __('wallet-address') %>
                  </label>
                  <input class="form-control dark-control" id="wallet-address" name="wallet-address" type="text" :class="[formErrors.walletAddress ? 'is-invalid' : '']"
                    v-model.trim="formData.walletAddress" placeholder="Enter your Ethereum wallet address.">

                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="referral-email-address">
                    <%= __('referral-email') %>
                  </label>
                  <input class="form-control dark-control" id="referral-email-address" name="referral-email-address" type="email" disabled
                    :class="[formErrors.referralEmailAddress ? 'is-invalid' : '']" v-model.trim="formData.referralEmailAddress">

                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <p class="text-danger" v-if="cloudError === 'emailAlreadyInUse'">
                  <%= __('email-in-use') %>
                </p>
                <p class="text-danger" v-else-if="cloudError">
                  <%- __('error.systemerror') %>
                </p>
              </div>
              <div class="col-sm-6">
                <div class="form-group text-right">
                  <a class="btn btn-outline-info" href="/account">
                    <%= __('cancel') %>
                  </a>
                  <ajax-button type="submit" :syncing="syncing" class="btn btn-dark">
                    <%= __('save-changes') %>
                  </ajax-button>
                </div>
              </div>
            </div>
          </ajax-form>

        </div>
        <!--end col-->
      </div>
      <!--end row-->

    </div>
    <!--End-commen-containe-->

  </div>
  <!--End-container-->
</div>
<!--End section-->
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>