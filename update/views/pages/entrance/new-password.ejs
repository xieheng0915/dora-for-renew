<div id="new-password" v-cloak>
  <div class="sign_up">
    <div class="sentrance_page_content">
      <ajax-form action="updatePasswordAndLogin" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()"
        :handle-parsing="handleParsingForm">
        <div class="large-title small-title">
          <%- __('reset-password') %>
        </div>
        <div class="form-group">
          <label class="form-label">
            <%= __('new-password') %>
          </label>
          <input class="form-control form-input" autocomplete="off" id="password" name="password" type="password" :class="[formErrors.password ? 'is-invalid' : '']"
            v-model.trim="formData.password"  focus-first>
          <div class="invalid-feedback" v-if="formErrors.password">
            <%= __('enter-new-password') %>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">
            <%= __('confirm-password') %>
          </label>
          <input class="form-control form-input" autocomplete="off" id="confirm-password" name="confirm-password" type="password" :class="[formErrors.confirmPassword ? 'is-invalid' : '']"
            v-model.trim="formData.confirmPassword">
          <div class="invalid-feedback" v-if="formErrors.confirmPassword">
            <%= __('password-not-match') %>
          </div>
        </div>
        <div>
            <p class="text-danger" v-if="cloudError"><%- __('error.systemerror') %></p>
        </div>
        <div class="light-forget-font to_login">
          <%- __('remember-your-password') %>
            <a href="../login" class="link-color">
              <%- __('common.menu.login') %>
            </a>
        </div>
        <div class="submit">
          <button type="submit" :syncing="syncing" class="submit-large-button phone-submit-button"></button>
        </div>
      </ajax-form>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>