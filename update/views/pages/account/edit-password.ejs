<div id="edit-password" v-cloak>
  <div class="edit_password">
    <div class="content">
      <div class="large-title small-title"><%= __('edit-profile') %></div>
      <ajax-form action="updatePassword" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
        <div class="form-group">
          <label for="password" class="form-label"><%= __('new-password') %></label>
          <input class="form-control form-input" autocomplete="off" id="password" name="password" type="password"  :class="[formErrors.password ? 'is-invalid' : '']" v-model.trim="formData.password" placeholder="••••••••" autofocus>
          <div class="invalid-feedback form-error" v-if="formErrors.password"><%= __('enter-new-password') %></div>
        </div>
        <div class="form-group">
          <label for="confirm-password" class="form-label"><%= __('confirm-password') %></label>
          <input class="form-control form-input" autocomplete="off" id="confirm-password" name="confirm-password" type="password"  :class="[formErrors.confirmPassword ? 'is-invalid' : '']" v-model.trim="formData.confirmPassword" placeholder="••••••••">
          <div class="invalid-feedback form-error" v-if="formErrors.confirmPassword"><%= __('password-do-not-match') %></div>
        </div>
        <div class="text-right phone_btn">
          <a class="large-button phone-button cancel" href="/account"><%= __('cancel') %></a><button class="submit-large-button phone-submit-button" type="submit" :syncing="syncing"><%= __('save-changes') %></button>
        </div>
      </ajax-form>
    </div>
  </div>
</div>
  

