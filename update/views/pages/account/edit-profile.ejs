<div id="edit-profile" v-cloak>
  <div class="edit_personal_info">
    <div class="content">
      <div class="large-title small-title"><%= __('update-personal-info') %></div>
      <ajax-form action="updateProfile" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
        <div class="d-md-flex justify-content-md-between">
          <div>
            <div class="form-group">
              <label for="full-name" class="form-label">
                <%= __('name') %>
              </label>
              <input class="form-control form-input" id="full-name" autocomplete="off" name="full-name" type="text" :class="[formErrors.fullName ? 'is-invalid' : '']"
                v-model.trim="formData.fullName" placeholder="Sturgis P. Sturgeon">
              <div class="invalid-feedback form-error" v-if="formErrors.fullName">
                <%= __('enter-your-full-name') %>
              </div>
            </div>
            <div class="form-group">
              <label for="full-name" class="form-label">
                <%= __('wallet-address') %>
              </label>
              <input class="form-control form-input" autocomplete="off" id="wallet-address" name="wallet-address" type="text" :class="[formErrors.walletAddress ? 'is-invalid' : '']"
                  v-model.trim="formData.walletAddress" placeholder="Enter your Ethereum wallet address.">
            </div>
          </div>
          <div>
            <div class="form-group">
              <label for="email-address" class="form-label">
                <%= __('email') %>
              </label>
              <input class="form-control form-input input" autocomplete="off" id="email-address" name="email-address" type="email" disabled :class="[formErrors.emailAddress ? 'is-invalid' : '']"
                v-model.trim="formData.emailAddress">
              <!-- <div class="invalid-feedback form-error" v-if="formErrors.emailAddress">
                <%= __('enter-a-valid-email-address') %> -->
            </div>
            <div class="form-group">
              <label for="referral-email-address" class="form-label">
                <%= __('referral-email') %>
              </label>
              <input class="form-control form-input input" autocomplete="off" id="referral-email-address" name="referral-email-address" type="email" disabled
                :class="[formErrors.referralEmailAddress ? 'is-invalid' : '']" v-model.trim="formData.referralEmailAddress">
            </div>
          </div>
        </div>
        <div class="text-right phone_btn">
          <a class="large-button phone-button cancel" href="/account"><%= __('cancel') %></a><button class="submit-large-button phone-submit-button" type="submit" :syncing="syncing"><%= __('save-changes') %></button>
        </div>
      </ajax-form>
    </div>
  </div>

